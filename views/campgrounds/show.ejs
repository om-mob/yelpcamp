<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">

      <img src="<%= camp.image %>" class="card-img-top" alt="...">

      <!-- Card Body: Title and Description -->
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>

      <!-- Location and Price -->
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= camp.location %></li>
        <li class="list-group-item">$<%= camp.price %>/night</li>
      </ul>

      <!-- Buttons -->
      <div class="card-body">
        <a href="<%= camp._id %>/edit" class="card-link btn btn-warning">Edit</a>
        <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>

      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
  </div>

  <!-- Reivews -->
  <div class="col-6">
    <!-- Review Form -->
    <h2>Leave a Review</h2>
    <form action="/campgrounds/<%= camp._id %>/reviews" method="POST" novalidate class="needs-validation my-3">
      <div>
        <label class="form-label" for="rating">Rating</label>
        <input type="range" min="1" max="5" class="form-range" name="review[rating]" id="rating">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body" rows="5" required></textarea>
      </div>
      <button class="btn btn-success" type="submit">Add Review</button>
    </form>

    <!-- Actual Reviews -->
    <% camp.reviews.forEach((review, idx) => { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <p class="card-text">Review: <%= review.body %></p>

        <!-- Delete Button -->
        <div class="card-body">
          <form class="d-inline" action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <% }) %>


  </div>
</div>