<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">

    <!-- Start of the Form -->
    <form action="/campgrounds" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">

      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input autocomplete="off" required class="form-control" type="text" id="title" name="campground[title]">
        <div class="valid-feedback">
          Nice Title!
        </div>
        <div class="invalid-feedback">
          Please provide a title.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input autocomplete="off" required class="form-control" type="text" id="location" name="campground[location]">
        <div class="invalid-feedback">
          Please provide a location.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input autocomplete="off" required type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]">
        </div>
        <div class="invalid-feedback">
          Please provide a price.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea required class="form-control" type="text" id="description" name="campground[description]"></textarea>
      </div>

      <!-- Image Upload -->
      <div class="mb-3">
        <label for="images" class="form-label">Choose Images</label>
        <input class="form-control" type="file" id="images" name="campground[images]" multiple>
      </div>

      <div class="mb-3">
        <button class="btn btn-success" type="submit">Add campground</button>
      </div>
    </form>

  </div>
</div>